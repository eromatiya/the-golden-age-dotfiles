!Rofi Color
!#include ".xrdb/rofi/darklove"


rofi.terminal:        urxvt
rofi.sidebar-mode:    true
rofi.theme:           sidetab-white.rasi
rofi.drun-icon-theme: Xenlism-Wildfire
rofi.show-icons:      true
rofi.click-to-exit:   true
rofi.me-select-entry: MouseSecondary
rofi.me-accept-entry: MousePrimary

#include ".xrdb/dmenu/nord"
!#include ".xrdb/fonts/tewi"




! ------------------------------------------------------------------------------
!  URxvt
! ------------------------------------------------------------------------------


URxvt.cursorBlink : 1
URxvt.font        : xft:Pragmatapro:pixelsize=13:antialias=true,xft:Pragmatapro
URxvt.italicFont  : xft:Pragmatapro:pixelsize=13:weight=bold:antialias=true,xft:Pragmatapro

URxvt.lineSpace           : 0
URxvt.letterSpace         : -1
URxvt.scrollBar           : false
URxvt.internalBorder      : 32
URxvt.geometry            : 75x13
URxvt.thickness           : 5
URxvt.titleBar            : false
URxvt.intensityStyles     : false
URxvt.scrollTtyKeypress   : true
URxvt.scrollTtyOutput     : true
URxvt.cursorUnderline	  : true
URxvt*allow_bold		  : true
URxvt*iso14755			  : False



Xft.antialias				: true
Xft.autohint				: 0
Xft.lcdfilter				: lcddefault
Xft.hintstyle				: hintslight
Xft.hinting					: 1
Xft.rgba					: rgb
Xft.dpi						: 96




!!EXTENSION
URxvt.perl-ext-common		: fullscreen,resize-font,matcher,clipboard
URxvt.keysym.F11			: perl:fullscreen:switch
URxvt.keysym.C-Down			: resize-font:smaller
URxvt.keysym.C-Up			: resize-font:bigger
URxvt.url-launcher			: firefox
URxvt.matcher.button		: 1



